{
  "name": "wireguard-manager",
  "version": "1.0.0",
  "description": "WireGuard VPN Configuration Manager",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "wireguard",
    "vpn",
    "manager"
  ],
  "author": "Mehrdad Hooshmand",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.wireguard.manager",
    "productName": "WireGuard Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "assets/icon.png"
    }
  }
}
